<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

      <!-- メッセージ相手を選択するナビ -->
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

        <ul class="nav nav-pills nav-stacked">
          <% @users.each do |user| %>
            <li  class="<% if user.id == @user_id.to_i %>active<% end %>"><a href="/recruits/<%= @recruit_id %>/messages/<%= user.id %>"><%= user.name %></a></li>
          <% end %>
        </ul>

      </div>

      <!--チャット画面-->
      <div class="message_view col-lg-9 col-md-9 col-sm-12 col-xs-12">
        <div class="panel panel-default ">

          <!--チャットのぶん面-->
          <div class="panel-heading">
            <h1 class="panel-title">message view</h1>
          </div>

          <div class="panel-body">
            <div class="text-left">
              <div id='chat'>ちゃっと</div>
            </div>
            <div class="text-right">
              <div id='chat'>返信</div>
            </div>
            <div class="text-right">
              <div id='chat'>返信</div>
            </div>
          </div>

        </div>

        <div class='inputText'>
          <textarea rows="5" id="txt" class="form-control" placeholder="Shift+Enterで送信"></textarea>
          <button type="button" class="btn btn-primary chat-btn pull-right" style="margin-top: 1em">送信</button>
          <button type="button" class="btn btn-primary chat-btn pull-right" style="margin-top: 1em">承認</button>
        </div>

      </div>


    </div>
  </div>
</div>
