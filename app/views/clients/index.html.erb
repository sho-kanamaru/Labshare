<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="create_recruit">
        <a href="/recruits/new" role="button" type="button" class="btn btn-primary btn-lg">求人情報を掲載する</a>
      </div>
      <div class="recruit_list col-lg-12 col-md-12 col-sm-12 col-xs-12 ">

        <% @recruits.each_with_index do |recruit,i| %>
        <a href="/recruits/<%= recruit.id %>" class="card-recruit">
          <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
            <div class="card h-100">
              <div class="card-body">
                <h4 class="card-title">
                  <%= recruit.title %>
                </h4>
                <h5>$24.99</h5>
                <p class="card-text"><%= recruit.detail %></p>
              </div>
              <div class="card-footer">
                <div class="star-ratings-sprite"><span style="width:<%= @ranks[i]/5.0*100 %>%" class="star-ratings-sprite-rating"></span></div>
              </div>
            </div>
          </div>
          </a>
        <% end %>

      </div>
    </div>
  </div>
</div>
