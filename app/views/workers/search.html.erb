<div class="container">
  <div class="row">
    <div class="search col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="panel-group" id="sampleAccordion">
        <div class="panel panel-default">
          <div class="panel-heading  background-orange">
            <h3 class="panel-title">
              <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
              <a data-toggle="collapse" data-parent="#sampleAccordion" href="#sampleAccordionCollapse1">
                検索条件
              </a>
            </h3>
          </div>
          <div id="sampleAccordionCollapse1" class="panel-collapse collapse in">
            <div class="panel-body">
              <%= form_tag(@url, method: :get) do %>                
                <fieldset>
                  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left">
                        <label class="control-label">名前</label>
                      </div>
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <input type="text" class="form-control" placeholder="テキスト入力欄" name="query" value="<%= @query %>">
                      </div>
                    </div>
                  </div>
                  <br>
                  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left">
                        <label class="control-label">カテゴリ</label>
                      </div>
                      <div class="col-lg12 col-md-12 col-sm-12 col-xs-12" >
           <select class="form-control" id="fileds" name="field_id">
             <% @fields.each do |field| %>
                    <% if field.id == 1 %>
                <% else %>
                <% if field.id == @field.to_i %>
                    <option value="<%= field.id %>" selected="selected"><%= field.name %></option>
                <% else %>
                    <option value="<%= field.id %>"><%= field.name %></option>
                <% end %>
                <% end %>
             <% end %>
           </select>
                      </div>
                    </div>
                  </div>
                  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                    <div class="row pull-right">
                      <div class=" ">
                        <button class="btn btn-primary">検索</button>
                        <button class="btn">クリア</button>
                      </div>
                    </div>
                  </div>
                </fieldset>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- 以下の要素を繰り返す。 -->
    <% @recruits.each_with_index do |recruit,i| %>
        <a href="/recruits/<%= recruit.id %>" class="card-recruit">
          <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 " style="margin-bottom: 10px; padding: 5px; box-sizing: border-box;">
            <div class="card border-primary mb-3 h-100">
              <div class="card-header">
                <small class="text-muted"><h6 class="card_header"><%= recruit.title %></h6></small>
              </div>
              <div class="card-body hogehoge">
                  <h5 class="card-price">金額：1000円</h5>
                  <p class="card-text">概要：<%= recruit.detail %></p>
              </div>
              <div class="card-footer">ユーザーの評価
              <%= @rank_sum %>
                <div class="star-ratings-sprite"><span style="width:<%= @rank[i]/5.0*100 %>%" class="star-ratings-sprite-rating"></span></div>
              </div>
        　  </div>
          </div>
        </a>
    <% end %>
    <!-- ここまで -->
  </div>
</div>
