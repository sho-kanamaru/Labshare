<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
     <div class="recruit_new form-horizontal">
       <%= form_tag(@url, method: :patch) do %>
         <div class="form-group">
           <label for="title">title</label>
           <input type="title" class="form-control" id="title" placeholder="title" name="title" value="<%= @recruit.title %>">
         </div>
         <div class="form-group">
           <label for="fields">fields</label>
           <select class="form-control" id="fileds" name="field_id">
             <% @fields.each do |field| %>
                <% if field.id == @recruit.field_id %>
                    <option value="<%= field.id %>" selected="selected"><%= field.name %></option>
                <% else %>
                    <option value="<%= field.id %>"><%= field.name %></option>
                <% end %>
             <% end %>
           </select>
         </div>

         <div class="form-group">
           <label for="recruit_money">money</label>
           <input type="recruit_money" class="form-control" id="recruit_money" placeholder="円" name="recruit_money" value="<%= @recruit.recruit_money %>">
         </div>

         <div class="form-group">
           <label for="detail">detail</label>
           <textarea class="form-control" id="detail" rows="5" name="detail"><%= @recruit.detail %></textarea>
         </div>
         <div class="form-group">
           <label for="image">image</label>
           <input type="file" class="form-control-file" id="image">
         </div>
         <input type="submit" class="btn btn-primary" value="編集">
       <% end %>
     </div>
    </div>
  </div>
</div>
