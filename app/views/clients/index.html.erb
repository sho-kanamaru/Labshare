<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="create_recruit">
        <a href="/recruits/new" role="button" type="button" class="btn btn-primary btn-lg">求人情報を掲載する</a>
      </div>
      <div class="recruit_list col-lg-12 col-md-12 col-sm-12 col-xs-12 ">

        <% @recruits.each_with_index do |recruit,i| %>
          <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
            <div class="card h-100">
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#"><%= recruit.title %></a>
                </h4>
                <h5>$24.99</h5>
                <p class="card-text"><%= recruit.detail %></p>
              </div>
              <div class="card-footer">
                <small class="text-muted"><%= @ranks[i]%></small>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
