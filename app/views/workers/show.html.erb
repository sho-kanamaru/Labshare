<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

      <!--ユーザーの情報-->
      <div class="user_info">

      </div>

      <!--応募した案件の情報-->
      <div class="recruit_list col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
        <h1>応募した案件一覧</h1>

        <% if !@recruits.nil? %>
          <% @recruits.each_with_index do |recruit,i| %>
            <a href="/recruits/<%= recruit.id %>" class="card-recruit">
              <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <div class="card h-100">
                  <div class="card-body">
                    <h4 class="card-title">
                      <%= recruit.title %>
                    </h4>
                    <h5>$24.99</h5>
                    <p class="card-text"><%= recruit.detail %></p>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted"><%= @rank[i]%></small>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>
