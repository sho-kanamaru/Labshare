<div class="container">

  <!-- 以下の要素を繰り返す。 -->
<% @recruits.each do |recruit| %>
  <a href="/recruits/<%= recruit.id %>" class="card-recruit">
    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12" style="margin-bottom: 10px; padding: 5px; box-sizing: border-box;">
      <div class="card h-100">
        <div class="card-body hogehoge">
          <h4><%= recruit.title %></h5>
          <h5>1000円</h5>
          <p class="card-text"><%= recruit.detail %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= @rank %></small>
        </div>
  　  </div>
    </div>
  </a>
<% end %>
  <!-- ここまで -->

</div>
